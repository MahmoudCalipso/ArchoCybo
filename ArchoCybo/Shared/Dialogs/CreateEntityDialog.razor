@using MudBlazor
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="entityName" Label="Entity Name" Variant="Variant.Outlined" Class="mb-3" />
        <MudTextField @bind-Value="tableName" Label="Table Name (optional)" Variant="Variant.Outlined" Class="mb-3" />
        <MudTextField @bind-Value="description" Label="Description" Variant="Variant.Outlined" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Create">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    string entityName = string.Empty;
    string tableName = string.Empty;
    string description = string.Empty;

    void Cancel() => MudDialog.Cancel();

    void Create()
    {
        if (string.IsNullOrWhiteSpace(entityName))
        {
            Snackbar.Add("Entity name is required", Severity.Warning);
            return;
        }

        MudDialog.Close(DialogResult.Ok(new { EntityName = entityName, TableName = tableName, Description = description }));
        Snackbar.Add($"Entity '{entityName}' created", Severity.Success);
    }
}
