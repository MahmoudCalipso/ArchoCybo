@using MudBlazor
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="projectName" Label="Project Name" Variant="Variant.Outlined" Class="mb-3" />
        <MudTextField @bind-Value="description" Label="Description" Variant="Variant.Outlined" Lines="3" Class="mb-3" />

        <MudText Typo="Typo.subtitle2" Class="mb-2">Backend Framework</MudText>
        <MudSelect @bind-Value="framework" Variant="Variant.Outlined" Class="mb-3">
            <MudSelectItem Value="@("DotNet10")">
                <MudStack Row="true" Spacing="1">
                    <MudText>.NET 10 (Recommended)</MudText>
                    <MudChip Size="Size.Small" Color="Color.Success">Latest</MudChip>
                </MudStack>
            </MudSelectItem>
        </MudSelect>

        <MudText Typo="Typo.subtitle2" Class="mb-2">Database</MudText>
        <MudSelect @bind-Value="database" Variant="Variant.Outlined" Class="mb-3">
            <MudSelectItem Value="@("SqlServer")">SQL Server</MudSelectItem>
            <MudSelectItem Value="@("PostgreSQL")">PostgreSQL</MudSelectItem>
            <MudSelectItem Value="@("MySQL")">MySQL</MudSelectItem>
        </MudSelect>

        <MudText Typo="Typo.subtitle2" Class="mb-2">Architecture</MudText>
        <MudSelect @bind-Value="architecture" Variant="Variant.Outlined" Class="mb-3">
            <MudSelectItem Value="@("CleanArchitecture")">
                <MudStack Row="true" Spacing="1">
                    <MudText>Clean Architecture</MudText>
                    <MudChip Size="Size.Small" Color="Color.Info">Recommended</MudChip>
                </MudStack>
            </MudSelectItem>
            <MudSelectItem Value="@("Layered")">Layered Architecture</MudSelectItem>
            <MudSelectItem Value="@("CQRS")">CQRS Pattern</MudSelectItem>
        </MudSelect>

        <MudCheckBox @bind-Checked="includeAuthentication" Label="Include JWT Authentication" Class="mb-3" />
        <MudCheckBox @bind-Checked="includeSerialization" Label="Include Serialization (Newtonsoft.Json)" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Create">Create Project</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    string projectName = string.Empty;
    string description = string.Empty;
    string framework = "DotNet10";
    string database = "SqlServer";
    string architecture = "CleanArchitecture";
    bool includeAuthentication = true;
    bool includeSerialization = true;

    void Cancel() => MudDialog.Cancel();

    void Create()
    {
        if (string.IsNullOrWhiteSpace(projectName))
        {
            Snackbar.Add("Project name is required", Severity.Warning);
            return;
        }

        MudDialog.Close(DialogResult.Ok(new
        {
            Name = projectName,
            Description = description,
            Framework = framework,
            Database = database,
            Architecture = architecture,
            IncludeAuthentication = includeAuthentication,
            IncludeSerialization = includeSerialization
        }));

        Snackbar.Add($"Project '{projectName}' created!", Severity.Success);
    }
}
