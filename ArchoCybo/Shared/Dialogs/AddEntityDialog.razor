@using MudBlazor
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="entityName" Label="Entity Name" Variant="Variant.Outlined" Class="mb-3" Placeholder="e.g., Product, User, Order" />
        <MudTextField @bind-Value="pluralName" Label="Plural Name (optional)" Variant="Variant.Outlined" Class="mb-3" Placeholder="e.g., Products, Users, Orders" />
        <MudTextField @bind-Value="description" Label="Description" Variant="Variant.Outlined" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Create">Create Entity</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string? ProjectId { get; set; }

    string entityName = string.Empty;
    string pluralName = string.Empty;
    string description = string.Empty;

    void Cancel() => MudDialog.Cancel();

    void Create()
    {
        if (string.IsNullOrWhiteSpace(entityName))
        {
            Snackbar.Add("Entity name is required", Severity.Warning);
            return;
        }

        var plural = string.IsNullOrWhiteSpace(pluralName) ? entityName + "s" : pluralName;

        MudDialog.Close(DialogResult.Ok(new
        {
            EntityName = entityName,
            PluralName = plural,
            Description = description,
            ProjectId = ProjectId
        }));

        Snackbar.Add($"Entity '{entityName}' created!", Severity.Success);
    }
}
