@page "/query-builder-advanced/{ProjectId}"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 px-6">
    <MudStack Direction="Row" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="mb-4">
        <div>
            <MudText Typo="Typo.h4" Style="color: #7e22ce; font-weight: 700;">Query Builder</MudText>
            <MudText Typo="Typo.subtitle1" Class="mud-text-secondary">Visually build queries for Project @ProjectId.</MudText>
        </div>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.AutoFixHigh" OnClick="OpenCodeGenDialog" Disabled="@string.IsNullOrEmpty(selectedEntity)">Generate Artifacts</MudButton>
    </MudStack>
    

    <MudGrid Spacing="4">
        <!-- Sidebar Configuration -->
        <MudItem xs="12" md="3">
            <MudPaper  Elevation="0" Class="pa-4" Style="background-color: #1f2937; border: 1px solid #374151; border-radius: 12px;">
                <MudText Typo="Typo.h6" Class="mb-4" Color="Color.Primary">Configuration</MudText>

                <MudSelect @bind-Value="SelectedEntityProperty" Label="Select Entity" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter" Class="mb-4" AdornmentColor="Color.Primary">
                    @if (entities != null)
                    {
                        foreach (var e in entities)
                        {
                            var name = e.GetProperty("Name").GetString();
                            <MudSelectItem Value="@name">@name</MudSelectItem>
                        }
                    }
                </MudSelect>

                @if (!string.IsNullOrEmpty(selectedEntity))
                {
                    <MudText Typo="Typo.subtitle2" Class="mb-2 mt-4" Color="Color.Inherit">Columns</MudText>
                    <div style="max-height: 200px; overflow-y: auto; background: #111827; padding: 10px; border-radius: 8px; border: 1px solid #374151;">
                        @if (columns != null)
                        {
                            foreach (var col in columns)
                            {
                                var colName = col.GetProperty("Name").GetString() ?? "";
                                <MudCheckBox T="bool" Checked="@(selectedColumns.ContainsKey(colName) && selectedColumns[colName])" CheckedChanged="@((bool v) => UpdateColumnSelection(colName, v))" Label="@colName" Dense="true" Color="Color.Primary" />
                            }
                        }
                    </div>

                    <MudText Typo="Typo.subtitle2" Class="mb-2 mt-4" Color="Color.Inherit">Filters</MudText>
                    @foreach (var filter in filters)
                    {
                        <div class="mb-2 pa-2 rounded" style="background: #111827; border: 1px solid #374151;">
                            <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.FilterAlt" Size="Size.Small" Color="Color.Tertiary" />
                                <MudSelect @bind-Value="filter.Column" Variant="Variant.Text" DisableUnderLine="true" Dense="true" Style="font-size: 0.875rem;">
                                    @if (columns != null)
                                    {
                                        foreach (var col in columns)
                                        {
                                            var n = col.GetProperty("Name").GetString();
                                            <MudSelectItem Value="@n">@n</MudSelectItem>
                                        }
                                    }
                                </MudSelect>
                                <MudSelect @bind-Value="filter.Operator" Variant="Variant.Text" DisableUnderLine="true" Dense="true" Style="width: 50px; font-size: 0.875rem;">
                                    <MudSelectItem Value="@("=")">=</MudSelectItem>
                                    <MudSelectItem Value="@("!=")">!=</MudSelectItem>
                                    <MudSelectItem Value="@(">")">></MudSelectItem>
                                    <MudSelectItem Value="@("<")">&lt;</MudSelectItem>
                                    <MudSelectItem Value="@("LIKE")">~</MudSelectItem>
                                </MudSelect>
                            </MudStack>
                            <MudTextField @bind-Value="filter.Value" Placeholder="Value" Variant="Variant.Outlined" Margin="Margin.Dense" Class="mt-1" />
                            <div class="d-flex justify-end mt-1">
                                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="() => RemoveFilter(filter)" />
                            </div>
                        </div>
                    }
                    <MudButton StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Text" Color="Color.Primary" OnClick="AddFilter" Size="Size.Small" Class="mt-1">Add Filter</MudButton>

                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="BuildQuery" FullWidth="true" Class="mt-6 rounded-lg">Build Query</MudButton>
                }
                else
                {
                    <MudAlert Severity="Severity.Info" Class="mt-4">Select an entity to begin.</MudAlert>
                }
            </MudPaper>
        </MudItem>

        <!-- Main Content (Code & Results) -->
        <MudItem xs="12" md="9">
            <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-0" Color="Color.Transparent" ActiveTabClass="tab-active">
                <MudTabPanel Text="SQL Query" Icon="@Icons.Material.Filled.Storage">
                    <MudPaper Elevation="0" Class="pa-4" Style="background-color: #1f2937; border: 1px solid #374151; border-radius: 12px; min-height: 400px;">
                        <MudStack Row="true" Justify="Justify.SpaceBetween" Class="mb-2">
                             <MudText Color="Color.Secondary" Typo="Typo.overline">Generated SQL</MudText>
                             <MudStack Row="true">
                                <MudButton Size="Size.Small" StartIcon="@Icons.Material.Filled.PlayArrow" Variant="Variant.Filled" Color="Color.Success" OnClick="RunQuery" Disabled="@string.IsNullOrEmpty(queryText)">Execute</MudButton>
                                <MudIconButton Icon="@Icons.Material.Filled.ContentCopy" Color="Color.Inherit" OnClick="CopyQuery" Disabled="@string.IsNullOrEmpty(queryText)" />
                             </MudStack>
                        </MudStack>
                        <div class="code-block">
                            <pre>@queryText</pre>
                        </div>
                    </MudPaper>
                </MudTabPanel>
                
                <MudTabPanel Text="Linq / EF Core" Icon="@Icons.Material.Filled.Code">
                    <MudPaper Elevation="0" Class="pa-4" Style="background-color: #1f2937; border: 1px solid #374151; border-radius: 12px; min-height: 400px;">
                         <MudText Color="Color.Secondary" Typo="Typo.overline" Class="mb-2">C# Expression</MudText>
                         <div class="code-block">
                            <pre>@linqText</pre>
                        </div>
                    </MudPaper>
                </MudTabPanel>

                <MudTabPanel Text="Results" Icon="@Icons.Material.Filled.TableChart" BadgeData="@(results?.Count ?? 0)" BadgeColor="Color.Primary">
                     <MudPaper Elevation="0" Class="pa-4" Style="background-color: #1f2937; border: 1px solid #374151; border-radius: 12px; min-height: 400px;">
                        @if (results != null && results.Count > 0)
                        {
                            <MudTable Items="results" Dense="true" Hover="true" Striped="true" FixedHeader="true" Height="350px" Class="mud-theme-dark">
                                <HeaderContent>
                                    @foreach (var key in results[0].Keys)
                                    {
                                        <MudTh>@key</MudTh>
                                    }
                                </HeaderContent>
                                <RowTemplate Context="row">
                                    @foreach (var val in row.Values)
                                    {
                                        <MudTd>@val</MudTd>
                                    }
                                </RowTemplate>
                            </MudTable>
                        }
                        else
                        {
                            <MudText Align="Align.Center" Class="mt-10" Color="Color.Default">No results to display. Execute a query first.</MudText>
                        }
                     </MudPaper>
                </MudTabPanel>
            </MudTabs>
        </MudItem>
    </MudGrid>
</MudContainer>

<MudDialog @bind-IsVisible="showCodeGenDialog" Options="dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">Generate Artifacts</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="entityName" Label="Entity Name" Variant="Variant.Outlined" Class="mb-3" />
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-4" Color="Color.Dark">
            <MudTabPanel Text="DTO">
                <div class="code-block-small"><pre>@generatedDto</pre></div>
            </MudTabPanel>
            <MudTabPanel Text="Repository">
                <div class="code-block-small"><pre>@generatedRepository</pre></div>
            </MudTabPanel>
            <MudTabPanel Text="Service">
                 <div class="code-block-small"><pre>@generatedService</pre></div>
            </MudTabPanel>
            <MudTabPanel Text="Controller">
                 <div class="code-block-small"><pre>@generatedController</pre></div>
            </MudTabPanel>
        </MudTabs>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseCodeGenDialog">Close</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="CopyAllCode">Copy All Code</MudButton>
    </DialogActions>
</MudDialog>

<style>
    .code-block {
        background-color: #111827;
        color: #a5b4fc;
        padding: 16px;
        border-radius: 8px;
        font-family: 'Consolas', 'Monaco', monospace;
        overflow: auto;
        height: 100%;
        min-height: 300px;
    }
    .code-block-small {
        background-color: #111827;
        color: #a5b4fc;
        padding: 10px;
        border-radius: 6px;
        font-family: 'Consolas', 'Monaco', monospace;
        overflow: auto;
        max-height: 400px;
    }
    .tab-active {
        color: #a855f7 !important;
        font-weight: bold;
    }
    .mud-theme-dark .mud-table-container {
        color: #d1d5db;
    }
</style>
