@page "/roles"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using ArchoCybo.Application.DTOs
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">Role Management</MudText>

    <MudPaper Class="pa-4" Elevation="3">
        <MudTable Items="roles" Hover="true" Dense="true" Class="mud-theme-dark">
            <HeaderContent>
                <MudTh>Role Name</MudTh>
                <MudTh>Display Name</MudTh>
                <MudTh>System Role</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="DisplayName">@context.DisplayName</MudTd>
                <MudTd DataLabel="System">@(context.IsSystemRole ? "Yes" : "No")</MudTd>
                <MudTd DataLabel="Actions">
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small" OnClick="@(() => ManagePermissions(context))">Manage Permissions</MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudPaper>
</MudContainer>
