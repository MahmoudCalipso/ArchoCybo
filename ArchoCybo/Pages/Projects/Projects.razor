@page "/projects"
@attribute [Authorize]
@using ArchoCybo.Shared
@using ArchoCybo.Services
@using MudBlazor
@using ArchoCybo.Shared.Dialogs

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 px-6">
    <MudStack Direction="Row" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
        <div>
            <MudText Typo="Typo.h4" Style="color: #d1d5db; font-weight: 700;">Projects</MudText>
            <MudText Typo="Typo.subtitle1" Class="mud-text-secondary">Manage your backend projects.</MudText>
        </div>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreate">New Project</MudButton>
    </MudStack>

    <MudPaper Class="pa-4" Style="background-color: #1f2937; border: 1px solid #374151; border-radius: 12px;" Elevation="0">
        <MudTable Items="projects" Dense="true" Hover="true" Class="mud-theme-dark" Elevation="0" Style="background-color: transparent;">
            <ToolBarContent>
                <MudTextField Placeholder="Search Projects..."
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Search"
                              Value="@search"
                              ValueChanged="@((string v) => OnSearchChanged(v))"
                              ValueExpression="() => search"
                              Immediate="true"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Class="mt-0" />
                <MudSpacer />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Database</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Created</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate Context="project">
                <MudTd><b>@project.Name</b></MudTd>
                <MudTd><MudChip Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined">@project.DatabaseType</MudChip></MudTd>
                <MudTd>@project.Status</MudTd>
                <MudTd>@project.CreatedAt.ToLocalTime().ToString("g")</MudTd>
                <MudTd>
                    <MudButton Size="Size.Small" Variant="Variant.Outlined" Color="Color.Info" OnClick="() => ShowDetails(project)">Details</MudButton>
                    <MudButton Size="Size.Small" Variant="Variant.Filled" Color="Color.Primary" Class="ml-2" OnClick="() => GenerateProject(project.Id)">Generate</MudButton>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudPaper>

    @if (selected != null)
    {
        <MudPaper Class="pa-4 mt-3" Style="background-color: #1f2937; border: 1px solid #374151; border-radius: 12px;">
            <MudText Typo="Typo.h6" Color="Color.Primary">Project Details: @selected.Name</MudText>
            <MudDivider Class="my-2" />
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudText Style="color: #d1d5db;"><b>Database:</b> @selected.DatabaseType</MudText>
                    <MudText Style="color: #d1d5db;"><b>Status:</b> @selected.Status</MudText>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudText Style="color: #d1d5db;"><b>Created:</b> @selected.CreatedAt.ToLocalTime().ToString("g")</MudText>
                    <MudText Style="color: #d1d5db;"><b>Generated At:</b> @(selected.GeneratedAt.HasValue ? selected.GeneratedAt.Value.ToLocalTime().ToString("g") : "-")</MudText>
                </MudItem>
                <MudItem xs="12" Class="mt-2">
                    <MudButton Variant="Variant.Outlined" Color="Color.Inherit" OnClick="OpenEdit">Edit</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Error" Class="ml-2" OnClick="ConfirmDelete">Delete</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="ml-2" StartIcon="@Icons.Custom.Brands.GitHub" OnClick="OpenPushToGit">Push to Git</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Tertiary" Class="ml-2" StartIcon="@Icons.Material.Filled.LiveTv" OnClick="OpenLivePreview">Live Preview</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Info" Class="ml-2" StartIcon="@Icons.Material.Filled.Code" OnClick="OpenCodeViewer">View Code</MudButton>
                    @if (!string.IsNullOrEmpty(artifactUrl))
                    {
                        <MudButton Variant="Variant.Filled" Color="Color.Success" Href="@artifactUrl" Class="ml-2">Download Artifact</MudButton>
                    }
                </MudItem>
            </MudGrid>
        </MudPaper>
    }
</MudContainer>
